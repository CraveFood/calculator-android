<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ButtonEqual">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:background">@drawable/c_calc_ripple_equal_button</item>
    <item name="android:tint">@color/colorEqualButtonIcon</item>
    <item name="android:textColor">@color/colorEqualButtonIcon</item>
    <item name="android:src">@drawable/c_calc_ic_equal</item>
    <item name="android:layout_margin">6dp</item>
  </style>

  <style name="ButtonOperations">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:background">@drawable/c_calc_ripple_operations_button</item>
    <item name="android:tint">@color/colorOperationsButtonIcon</item>
    <item name="android:textColor">@color/colorOperationsButtonIcon</item>
    <item name="android:layout_margin">6dp</item>
    <item name="android:fontFamily">@font/c_calc_lato_regular</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="ButtonNumbers">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:background">@drawable/c_calc_ripple_numbers_button</item>
    <item name="android:tint">@color/colorNumbersButtonIcon</item>
    <item name="android:textColor">@color/colorNumbersButtonIcon</item>
    <item name="android:layout_margin">6dp</item>
    <item name="android:textSize">24sp</item>
    <item name="android:fontFamily">@font/c_calc_lato_regular</item>
  </style>

  <style name="ButtonConfirm">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:layout_weight">4</item>
    <item name="android:background">@drawable/c_calc_selector_confirm_button</item>
    <item name="android:textColor">@color/colorConfirmButtonText</item>
    <item name="android:textSize">14sp</item>
    <item name="android:text">@string/charge_customer</item>
    <item name="android:maxLines">1</item>
    <item name="android:layout_marginStart">4dp</item>
    <item name="android:fontFamily">@font/c_calc_lato_semibold</item>
  </style>

  <style name="ButtonCancel">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:layout_weight">6</item>
    <item name="android:elevation">0dp</item>
    <item name="android:background">@drawable/c_calc_ripple_cancel_button</item>
    <item name="android:textColor">@color/colorCancelButtonText</item>
    <item name="android:maxLines">1</item>
    <item name="android:textSize">14sp</item>
    <item name="android:text">@string/cancel</item>
    <item name="android:layout_marginEnd">4dp</item>
    <item name="android:fontFamily">@font/c_calc_lato_semibold</item>
  </style>

  <style name="TextViewOperation">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">24sp</item>
    <item name="android:layout_gravity">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">@color/colorOperationText</item>
    <item name="android:fontFamily">@font/c_calc_lato_regular</item>
    <item name="android:textAlignment">textEnd</item>
  </style>

  <style name="TextViewPreview">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">32sp</item>
    <item name="android:layout_gravity">end</item>
    <item name="android:gravity">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">@color/colorPreviewText</item>
    <item name="android:fontFamily">@font/c_calc_lato_regular</item>
    <item name="android:layout_marginBottom">16dp</item>
  </style>

  <style name="TextViewResult" parent="TextViewPreview">
    <item name="android:textColor">@color/colorResultText</item>
  </style>
</resources>