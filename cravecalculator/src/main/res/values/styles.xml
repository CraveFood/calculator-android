<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="CCalcButtonEqual">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:background">@drawable/c_calc_ripple_equal_button</item>
    <item name="android:tint">@color/cCalColorEqualButtonIcon</item>
    <item name="android:textColor">@color/cCalColorEqualButtonIcon</item>
    <item name="android:src">@drawable/c_calc_ic_equal</item>
    <item name="android:layout_margin">6dp</item>
  </style>

  <style name="CCalcButtonOperations">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:background">@drawable/c_calc_ripple_operations_button</item>
    <item name="android:tint">@color/cCalColorOperationsButtonIcon</item>
    <item name="android:textColor">@color/cCalColorOperationsButtonIcon</item>
    <item name="android:layout_margin">6dp</item>
    <item name="android:fontFamily">@font/c_calc_lato_regular</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="CCalcButtonNumbers">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:background">@drawable/c_calc_ripple_numbers_button</item>
    <item name="android:tint">@color/cCalColorNumbersButtonIcon</item>
    <item name="android:textColor">@color/cCalColorNumbersButtonIcon</item>
    <item name="android:layout_margin">6dp</item>
    <item name="android:textSize">24sp</item>
    <item name="android:fontFamily">@font/c_calc_lato_regular</item>
  </style>

  <style name="CCalcTextViewOperation">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">24sp</item>
    <item name="android:layout_gravity">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">@color/cCalColorOperationText</item>
    <item name="android:fontFamily">@font/c_calc_lato_regular</item>
    <item name="android:textAlignment">textEnd</item>
  </style>

  <style name="CCalcTextViewPreview">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">32sp</item>
    <item name="android:layout_gravity">end</item>
    <item name="android:gravity">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">@color/cCalColorPreviewText</item>
    <item name="android:fontFamily">@font/c_calc_lato_regular</item>
    <item name="android:layout_marginBottom">16dp</item>
  </style>

  <style name="CCalcTextViewResult" parent="CCalcTextViewPreview">
    <item name="android:textColor">@color/cCalColorResultText</item>
  </style>
</resources>